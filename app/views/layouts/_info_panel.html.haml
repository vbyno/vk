.topic{:class => ('margin-bottom-0' if @main_page)}
  .home-services.margin-0
    .container
      .row
        .col-md-5.visible-lg-block
          %ul
            %li
              %i.fa.fa-gears
              %p
                %span Built with
                Bootstrap 3
            %li
              %i.fa.fa-picture-o
              %p
                Isotope
                %span Portfolio
            %li
              %i.fa.fa-envelope-o
              %p
                24/7 Support
                %span by e-mail
        .col-md-7.info-panel
          - if @main_page
            .lead.phones
              - SiteInfo.use(:contact) do |contact|
                - %i[phone_kyivstar phone_life].each do |phone_operator|
                  %div
                    %a{class: "value", href: "tel:+#{contact[phone_operator]}"}
                      = contact[:"#{phone_operator}_str"]
          - else
            = render 'layouts/breadcrumbs'
