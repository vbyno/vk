- if @reservation.errors.any?
  :plain
    $('#reservation-form').html("#{escape_javascript(render 'form')}");
    $('.datepicker').custom_datepicker();
    $('.alert .close').on('click', function() {
      $('.alert').remove();
    })
- else
  :plain
    $('#reservation-form').html("<p>#{t('.thank_you')}</p>");
