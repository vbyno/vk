= semantic_form_for reservation do |f|
  = f.semantic_errors
  = f.inputs do
    = f.input :apartment_id, as: :hidden
    = f.input :customer_name, label: 'Your Name'
    = f.input :customer_email, label: 'Your Email'
    = f.input :check_in, as: :string, input_html: { class: 'datepicker' }
    = f.input :check_out, as: :string, input_html: { class: 'datepicker' }
  = f.actions do
    = f.submit 'Send Reservation', class: 'btn btn-big btn-success'
